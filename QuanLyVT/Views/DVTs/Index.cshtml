@model IEnumerable<QuanLyVT.Models.DVT>

@{
    ViewBag.Title = "Đơn vị tính";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5><b>Trang chủ / Đơn vị tính</b></h5>

<p>
    <button type="button" class="btn btn-success">
          @Html.ActionLink("Thêm Mới", "Create", new { @class = "btn btn-success" }, new { @style = "color:white !important" })
    </button>
</p>

<table id="myTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Mã đơn vị tính
            </th>
            <th>
                Tên đơn vị tính
            </th>
            <th style="text-align: center">
                Thao Tác
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ma_DVT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten_DVT)
            </td>
            <td style="width: 250px; text-align: center">
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID_DVT }, new { @class = "btn btn-warning", Styles = "color:white" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID_DVT }, new { @class = "btn btn-info", Styles = "color:white" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_DVT }, new { @class = "btn btn-danger", Styles = "color:white" })
            </td>
        </tr>
        }
    </tbody>

</table>
