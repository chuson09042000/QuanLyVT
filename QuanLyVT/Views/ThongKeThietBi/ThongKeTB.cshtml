@model QuanLyVT.Models.THIET_BI
@{
    ViewBag.Title = "ThongKeTB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ThongKeTB</h2>
@using (Html.BeginForm("ThongKeTB", "ThongKeThietBi", FormMethod.Get)) // -- phần thay đổi
{
    <div class="form-group">
        @Html.LabelFor(model => model.ID_THIET_BI, "Tên thiết bị", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ID_THIET_BI", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_THIET_BI, "", new { @class = "text-danger" })
        </div>
    </div>
    <button type="submit" class="btn btn-info btn-sm"><b>Thống kê</b></button>

}
