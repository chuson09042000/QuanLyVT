@model List<QuanLyVT.Models.modelThongKe>
@{
    ViewBag.Title = "ViewThongKe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center">Thống kê theo thiết bị</h2>


<table id="myTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Mã thiết bị
            </th>
            <th>
                Tên thiết bị
            </th>
            <th>
                Hợp đồng
            </th>
            <th>
                Gói thầu
            </th>

            <th>
                Bện viện/ đối tác
            </th>
            <th>
                Người phụ trách
            </th>
            <th>
                Nhân viên kỹ thuật
            </th>
            <th>
                Xuất xứ
            </th>
            <th>
                Năm sản xuất
            </th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ma_TB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ten_TB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TEN_HD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ten_Goi_Thau)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ten_BV)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Ten_Nguoi_Phu_Trach)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ten_NV_KT)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.XX_TC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nam_SX)
                    </td>


                </tr>
            }
            

        }
    </tbody>
</table>

<button class="btn btn-error" style="color: white">
    @Html.ActionLink("Quay lại", "ThongKeTB", new { @class = "btn btn-warning", Styles = "color:white !important" })
</button>