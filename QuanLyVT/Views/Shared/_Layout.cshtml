<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý tật tư - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .spandoc {
            color: white;
            height: 40px;
        }
        .a {
            color: white !important;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Bệnh viện", "Index", "BENH_VIEN")</li>
                    <li>@Html.ActionLink("Hợp đồng", "Index", "HOP_DONG")</li>
                    <li>@Html.ActionLink("Linh kiện", "Index", "LINH_KIEN")</li>
                    <li>@Html.ActionLink("Thiết bị", "Index", "THIET_BI")</li>
                    <li>@Html.ActionLink("Đơn vị tính", "Index", "DVTs")</li>
                    <li>@Html.ActionLink("Người phụ trách", "Index", "NGUOI_PHU_TRACH")</li>
                    <li>@Html.ActionLink("Nhân viên", "Index", "NHAN_VIEN_KY_THUAT")</li>
                    <li>@Html.ActionLink("Trạng thái", "Index", "TINH_TRANG")</li>
                    <li>@Html.ActionLink("Gói thầu", "Index", "GOI_THAU")</li>
                    <li>@Html.ActionLink("Báo cáo", "Index", "NHAN_VIEN_KY_THUAT")</li>
                    <li>@Html.ActionLink("Bảo hành, sửa chữa", "Index", "NHAN_VIEN_KY_THUAT")</li>
                    <li>@Html.ActionLink("Thông tin tài khoản", "Index", "NGUOI_DUNG")</li>
                </ul>
            </div>
            <div class="dropdown" style="float:right;margin:-100px -247px -5px 0;">
                <button class="btn btn-white dropdown-toggle" style="width: 120px;height:102px" type="button" data-toggle="dropdown">
                    <img src="~/Content/assets/images/avatars/person-circle.svg" style="display: flex; height:90px;width:40px;" />
                </button>
                <ul class="dropdown-menu">
                    <li><a href="/Home/Login">Đăng Xuất</a></li>
                    <li><a href="#">Đổi mật khẩu</a></li>
                </ul>
            </div>
            <div class="pull-right" style="position: absolute; float:right">

            </div>
        </div>

    </div>
    <div class="container body-content" style="margin-top:50px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Thanh Truc Company</p><i class="bi bi-person"></i>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "lengthMenu": [[7, 15, 25, 35], [7, 15, 25, 35]],
                language: {
                    processing: "Message khi đang tải dữ liệu",
                    search: "Tìm kiếm",
                    lengthMenu: "Số lượng bản ghi trên 1 trang _MENU_ ",
                    info: "Bản ghi từ _START_ đến _END_ Tổng công _TOTAL_ bản ghi",
                    infoEmpty: "Hiển thị 0 bản ghi trong 0 tổng cộng 0 ",
                    infoFiltered: "(Dữ liệu được tìm kiếm trong _MAX_ bản ghi)",
                    //infoPostFix: "Alo Alo", // Cái này khi thêm vào nó sẽ đứng sau info
                    loadingRecords: "",
                    zeroRecords: "Không có dữ liệu bản ghi nào!",
                    emptyTable: "Không có dữ liệu",
                    paginate: {
                        first: "Trang đầu",
                        previous: "Trang trước",
                        next: "Trang sau",
                        last: "Trang cuối"
                    },
                    aria: {
                        sortAscending: ": Message khi đang sắp xếp theo column",
                        sortDescending: ": Message khi đang sắp xếp theo column",
                    }
                },

            });
        });
    </script>
</body>
</html>
