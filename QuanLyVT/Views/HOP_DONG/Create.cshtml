                @Html.ValidationMessageFor(model => model.ID_NHAN_VIEN_KY_THUAT, "", new { @class = "text-danger" })*@
            @Html.DropDownList("ID_NHAN_VIEN_KY_THUAT", (IEnumerable<SelectListItem>)ViewBag.NvList, "------Chọn nhân viên kỹ thuật------", new { @class = "form-control" })
