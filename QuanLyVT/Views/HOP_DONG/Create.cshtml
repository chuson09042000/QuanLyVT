@model QuanLyVT.Models.HOP_DONG

@{
    ViewBag.Title = "Hợp đồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h5><b>Trang chủ > Hợp đồng > Thêm mới</b></h5>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h3><b>Thêm mới hợp đồng</b></h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Ma_HD, "Số hợp đồng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ma_HD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ma_HD, "", new { @class = "text-danger" })
            @if (ViewBag.ErrorMessage != null)
            {
                <h5 style="color:red">@ViewBag.ErrorMessage</h5>
            }
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TEN_HD, "Tên hợp đồng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TEN_HD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TEN_HD, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ngay_Hoan_Thanh, "Ngày hoàn thành", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ngay_Hoan_Thanh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ngay_Hoan_Thanh, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.So_Luong, "Số lượng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.So_Luong, new { htmlAttributes = new { @class = "form-control" , @type="number"} })
            @Html.ValidationMessageFor(model => model.So_Luong, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Han_BH, "Hạn bảo hành", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Han_BH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Han_BH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ghi_Chu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ghi_Chu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ghi_Chu, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.FileName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FileName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FileName, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        @Html.LabelFor(model => model.ID_THIET_BI, "Tên thiết bị", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.DropDownList("ID_THIET_BI", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.DropDownList("ID_THIET_BI", (IEnumerable<SelectListItem>)ViewBag.TbList, "------Chọn thiết bị------", new { @class = "form-control" })
            @*@Html.ValidationMessageFor(model => model.ID_THIET_BI, "", new { @class = "text-danger" })*@
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.ID_BENH_VIEN, "Tên bệnh viện/ đối tác", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ID_BENH_VIEN", (IEnumerable<SelectListItem>)ViewBag.BvList, "------Chọn bệnh viện/ đối tác------", new { @class = "form-control" })
