@model QuanLyVT.Models.NGUOI_PHU_TRACH

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h5><b>Trang chủ > Thiết bị > Xóa thông tin</b></h5>

<div>
    <h3><b>Bạn có chắc chắn muốn xóa bản ghi này không?</b></h3>
    <dl class="dl-horizontal">
        <dt>
            <label>Mã NPT</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.Ma_Nguoi_Phu_Trach, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

        <dt>
            <label>Tên NPT</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.Ten_Nguoi_Phu_Trach, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

        <dt>
            <label>Mã NPT</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.BENH_VIEN.Ma_BV, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

        <dt>
            <label>Chức vụ</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.Chuc_Vu, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

        <dt>
            <label>Số điện thoại</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.So_Dien_Thoai, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

        <dt>
            <label>Bệnh viện/ đối tác</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.BENH_VIEN.Ten_BV, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    @if (TempData["ResultMessage"] != null)
    {
        <h5 style="color:red">@TempData["ResultMessage"]</h5>
    }
    <input type="submit" value="Xóa" class="btn btn-danger" /> |
    <button type="button" class="btn btn-secondary">
        @Html.ActionLink("Quay lại", "Index", new { @class = "btn btn-warning" }, new { @style = "color:blue !important" })
    </button>
</div>
    }
</div>
