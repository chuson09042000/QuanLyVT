@model QuanLyVT.Models.THIET_BI

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h5><b>Trang chủ > Thiết bị > Xóa thông tin</b></h5>

<div>
    <h3><b>Bạn có chắc chắn muốn xóa bản ghi này không?</b></h3>
    <dl class="dl-horizontal">

        <dt>
            <label>Mã thiết bị</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.Ma_TB, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

        <dt>
            <label>Tên thiết bị</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.Ten_TB, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

        <dt>
            <label>Xuất xứ</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.XX_TC, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

        <dt>
            <label>Năm sản xuất</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.Nam_SX, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>
        <dt>
            <label>Bệnh viện/ đối tác</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.BENH_VIEN.Ten_BV, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

        <dt>
            <label>Gói thầu</label>
        </dt>
        <dd>
            @Html.EditorFor(model => model.GOI_THAU.Ten_Goi_Thau, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

        <dt>
            <label>Linh kiện</label>
        </dt>

        <dd>
            @Html.EditorFor(model => model.LINH_KIEN.Ten_LK, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @style = " margin: 5px" } })
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @*<div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>*@
<div class="form-actions no-color">
    @if (TempData["ResultMessage"] != null)
    {
        <h5 style="color:red">@TempData["ResultMessage"]</h5>
    }
    <input type="submit" value="Xóa" class="btn btn-danger" /> |
    <button type="button" class="btn btn-secondary">
        @Html.ActionLink("Quay lại", "Index", new { @class = "btn btn-warning" }, new { @style = "color:blue !important" })
    </button>
</div>
    }
</div>
