@model IEnumerable<QuanLyVT.Models.BAO_TRI>

@{
    ViewBag.Title = "Bảo trì";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5><b>Trang chủ / Bảo trì</b></h5>

<p>
    <button type="button" class="btn btn-success">
        @*<a href="Create" type="button" class="btn btn-success" style="color:white"> Thêm Mới</a>*@
        @Html.ActionLink("Thêm Mới", "Create", new { @class = "btn btn-success" }, new { @style = "color:white !important" })
    </button>
</p>

<table id="myTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Mã bảo trì
            </th>
            <th>
                Ngày bảo trì
            </th>
            <th>
                Linh kiện
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th>
                Fax
            </th>
            <th style="text-align: center">
                Thao Tác
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ma_Bao_Tri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngay_Bao_Tri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LK_ThayThe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THIET_BI.Ten_TB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HOP_DONG.TEN_HD)
                </td>
                <td style="width: 250px; text-align: center">
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID_BAO_TRI }, new { @class = "btn btn-warning", Styles = "color:white" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID_BAO_TRI }, new { @class = "btn btn-info", Styles = "color:white" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID_BAO_TRI }, new { @class = "btn btn-danger", Styles = "color:white" })
                </td>
            </tr>
        }
    </tbody>
</table>

